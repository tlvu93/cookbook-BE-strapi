{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "creation_date": {
      "type": "date"
    },
    "rating": {
      "type": "decimal"
    },
    "quantity": {
      "type": "string"
    },
    "ingredients": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ingredient.ingredient",
      "mappedBy": "recipe"
    }
  }
}
